**/.git
**/.vs
**/.vscode
**/.idea
**/.DS_Store
**/node_modules
**/*.user
**/*.suo
      - xpack.security.http.ssl.enabled=false
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
      - bootstrap.memory_lock=true
    ulimits:
      memlock:
        soft: -1
        hard: -1
    volumes:
      - elasticsearch-data:/usr/share/elasticsearch/data
    ports:
      - "9200:9200"
      - "9300:9300"
    networks:
      - elastic-network
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:9200/_cluster/health || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 30

  # Kibana Service
  kibana:
    image: docker.elastic.co/kibana/kibana:8.11.0
    container_name: kibana
    environment:
      - ELASTICSEARCH_HOSTS=http://elasticsearch:9200
      - ELASTICSEARCH_URL=http://elasticsearch:9200
    ports:
      - "5601:5601"
    networks:
      - elastic-network
    depends_on:
      elasticsearch:
        condition: service_healthy
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:5601/api/status || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 30

  # .NET Application
  elasticsearch-demo:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: elasticsearch-demo-app
    environment:
      - ELASTICSEARCH_URL=http://elasticsearch:9200
    networks:
      - elastic-network
    depends_on:
      kibana:
        condition: service_healthy
    stdin_open: true
    tty: true

volumes:
  elasticsearch-data:
    driver: local

networks:
  elastic-network:
    driver: bridge

